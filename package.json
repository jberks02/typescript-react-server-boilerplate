{
  "name": "typescript-react-server-boilerplate",
  "version": "1.0.0",
  "description": "Boiler plate repository to quickly start new projects using a typescript backend with a typescript enhanced React frontend running out of different packages",
  "main": "index.ts",
  "scripts": {
    "test": "jest --collectiveCoverage",
    "dev-server": "concurrently \"tsc -w\" \"nodemon -w .env -r dotenv/config target/index.js\"",
    "clean": "rimraf target",
    "build": "tsc",
    "postbuild": "copyfiles -E package.json package-lock.json target",
    "dev-react": "webpack serve --mode development", 
    "typegen": "kea-typegen write ./web"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jberks02/typescript-react-server-boilerplate.git"
  },
  "keywords": [
    "boiler",
    "plate"
  ],
  "author": "Justin Berkshire",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jberks02/typescript-react-server-boilerplate/issues"
  },
  "homepage": "https://github.com/jberks02/typescript-react-server-boilerplate#readme",
  "dependencies": {
    "concurrently": "^7.0.0",
    "dotenv": "^16.0.0",
    "kea": "^2.5.8",
    "node-fetch": "^3.2.1",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hot-loader": "^4.13.0",
    "react-redux": "^7.2.6",
    "redux": "^4.1.2",
    "reselect": "^4.1.5",
    "rimraf": "^3.0.2",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@types/express": "^4.17.13",
    "@types/html-escaper": "^3.0.0",
    "@types/jest": "^27.4.1",
    "@types/mssql": "^7.1.5",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.13",
    "@types/react-redux": "^7.1.23",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "babel-loader": "^8.2.3",
    "copyfiles": "^2.4.1",
    "css-loader": "^6.7.0",
    "eslint": "^8.10.0",
    "jest": "^27.5.1",
    "kea-typegen": "^1.4.2",
    "nodemon": "^2.0.15",
    "style-loader": "^3.3.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4"
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src"
    ],
    "resetMocks": true
  }
}
